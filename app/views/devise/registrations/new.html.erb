<h2>CREER TON PROFIL</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="mb-3">
    <label for="prenom" class="form-label">Email</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-3">
    <label for="prenom" class="form-label">Mot de Passe</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="mb-3">
    <label for="prenom" class="form-group">Confirmation de Mot de Passe</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

<div class="container">
  <div class="mb-3">
    <label for="prenom" class="form-label">Pr√©nom</label>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", placeholder: "First Name" %>
  </div>

  <div class="mb-3">
    <label for="prenom" class="form-label">Genre</label>
    <%= f.select :gender, options_for_select(['Lady', 'Gentleman'], @user.gender) %>
  </div>

  <div class="mb-3">
    <label for="prenom" class="form-label">Birthday</label>
      <%= f.date_field :birthday, autofocus: true, autocomplete: "given-name", placeholder: "Date de Naissance" %>
  </div>

  <div class="mb-3">
    <div class="row">
      <label for="prenom" class="form-label">Type</label>
      <%= f.select :type, options_for_select(['Partner', 'Teacher', 'Organisateur', 'DJ'], @user.type) %>
    </div>
  </div>

  <div class="form-check">
  <%= f.label :dance_ids, "Select your dances" %>
    <%= f.collection_check_boxes :dance_ids, Dance.all, :id, :name do |b| %>
      <div class="form-check">
        <%= b.check_box(class: 'form-check-input') %>
        <%= b.label(class: 'form-check-label') %>
    </div>
      <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>

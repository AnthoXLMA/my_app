<%= form_for @user, html: { id: "dancer-profile-form" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "Full Name" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :bio, "Bio" %>
    <%= f.text_area :bio, class: "form-control", rows: 4, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :profile_picture, "Profile Picture" %>
    <%= f.file_field :profile_picture, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :dances, "Select Your Dances" %>
    <%= f.collection_check_boxes :dance_ids, @dances, :id, :name do |b| %>
      <div class="dance-checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <%= f.submit "Create Profile", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to Profile List', users_path, class: "btn btn-secondary" %>

<div class="container">
  <div class="box">
    <h1><%= @user.first_name %>'s Profile</h1>
    <p>Email: <%= @user.email %></p>

    <% if @user.birthday.present? %>
      <p>Birthday: <%= @user.birthday.strftime('%B %d, %Y') %></p>
    <% else %>
      <p>Birthday: Not provided</p>
    <% end %>
  </div>

  <%= link_to 'Edit Profile', edit_user_path %>

  <h3>Selected Dances:</h3>
  <ul>
    <% @user.dances.each do |dance| %>
      <li><%= dance.name %></li>
    <% end %>
  </ul>
</div>

<%= form_for @user, html: { id: "dancer-profile-form" } do |f| %>
  <div class="form-group">
    <%= f.label :first_name, "Full Name" %>
    <%= f.text_field :first_name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :dances, "Select Your Dances" %>
    <%= f.collection_check_boxes :dance_ids, @dances, :id, :name do |b| %>
      <div class="dance-checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>
  <%= f.submit "Create Profile", class: "btn btn-primary" %>
<% end %>



